<div class="quick-theme-colors mb-3 d-flex flex-wrap align-items-center" data-input-name="<%= input_name %>" data-preview-theme="<%= defined?(preview_theme) && preview_theme %>">
  <% quick_colors.each do |color| %>
    <button type="button" class="quick-color-btn rounded-circle border p-0 mr-2 mb-1" style="width: 28px; height: 28px; background: <%= color %>; --ring-color: <%= color %>" data-color="<%= color %>" title="<%= color %>" aria-label="Set theme color to <%= color %>"></button>
  <% end %>
</div>
