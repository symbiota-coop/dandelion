<div class="row justify-content-center">
  <div class="col col-lg-4">
    <div class="card shadow-sm" id="sign_in">
      <div class="card-header text-white bg-primary">
        <h2 class="text-center my-0">Sign in</h2>
      </div>
      <div class="card-body">
        <p>A sign in code was sent to <%=@account.email%>. Please check your email app and paste the code below âœ¨</p>

        <p>
          (If you don't receive a code within 2 minutes, please email <a href="mailto:<%=ENV['CONTACT_EMAIL']%>"><%=ENV['CONTACT_EMAIL']%></a>.)
        </p>

        <% form_tag '/accounts/sign_in_code', class: 'my-3' do %>

          <div class="input-group">
            <%= text_field_tag :code, class: 'form-control', placeholder: 'Code', id: 'code' %>
            <div class="input-group-append">
              <button class="btn btn-primary" type="submit">Submit</button>
            </div>
          </div>

        <% end %>
      </div>
    </div>
  </div>
</div>
