<% if (links = account.atproto_links) && links.any? %>

  <h2 class="mt-5">
    <a target="_blank" class="text-dark" href="https://bsky.app/profile/<%= u = account.atproto_handle %>">
      @<%= account.atproto_handle %>
    </a>
  </h2>

  <div class="mb-3">
    <div class="row">

      <% links.first(5).each { |og| %>
      <div class="col-12">
        <div class="mb-4">
          <div class="row block no-gutters align-items-stretch">
            <% if og['image'] %>
              <div class="col-12 col-lg-9">
              <% else %>
                <div class="col-12">
                <% end %>
                <div class="p-3">
                  <h4>
                    <a class="text-dark" href="<%= og['url'] %>" target="_blank">
                      <%= og['title']%>
                    </a>
                  </h4>
                  <% if og['description'] %>
                    <p class="mb-2">
                      <a class="text-dark" href="<%= og['url']%>" target="_blank" style="text-decoration: none">
                        <%= og['description'].truncate(150) %>
                      </a>
                    </p>
                  <% end %>
                  <p class="mb-0 text-muted">
                    <a target="_blank" class="text-muted" href="<%= og['url'] %>">
                      <%= URI(og['url']).host.gsub('www.', '') %>
                    </a>
                    &middot;
                    <a target="_blank" class="text-muted" href="https://bsky.app/profile/<%= u %>/post/<%= og['hash'] %>">
                      <%= Time.at(og['timestamp']/1e3).to_date.to_s(:post) %>
                    </a>
                  </p>
                </div>
              </div>
              <% if og['image'] %>
                <div class="col-3 bg-white d-none d-lg-block">
                  <a href="<%= og['url']%>" target="_blank">
                    <img class="w-100" onerror="this.style.display='none'" src="<%= og['image'] %>">
                  </a>
                </div>
              <% end %>
            </div>
          </div>
        </div>
        <% } %>
      </div>
    </div>
  <% end %>