<% if comment.file %>
  <div style="margin-top: 10px">
    <% if %w[png jpg gif jpeg].any? { |x| comment.file.url.split('/').last.downcase.ends_with? ".#{x}" } %>
      <img style="max-width: 100%;" src="<%= comment.file.url %>">
    <% else %>
      <i class="bi bi-paperclip"></i> <a href="<%= comment.file.url %>"><%= comment.file.url.split('/').last %></a>
    <% end %>
    <% if comment.account_id == current_account.try(:id) %>
      <a data-toggle="tooltip" title="Remove file" class="subtle" href="/comments/<%= comment.id %>/file/destroy" data-confirm="Are you sure you want to remove this file?">
        <i class="bi bi-x-lg"></i>
      </a>
    <% end %>
  </div>
<% end %>
<% if !comment.file && comment.account_id == current_account.try(:id) %>
  <a data-toggle="tooltip" title="Attach a file" class="btn btn-sm btn-outline-primary" href="javascript:;" onclick="$(this).hide().next().show().find('input').click()">
    <i class="bi bi-paperclip"></i>
  </a>
  <% form_tag "/comments/#{comment.id}/file", multipart: true, class: 'mt-3', style: 'display: none' do %>
    <%= file_field_tag :file, onchange: '$(this).next().show();this.form.submit()' %>
    <i style="display: none" class="bi bi-spin bi-slash-lg"></i>
  <% end %>
<% end %>
