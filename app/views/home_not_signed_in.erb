        'gnosis-chain' => 'https://www.gnosischain.com/'
      }.each do |k, v| %>
          <div class="col">
            <a href="<%=v%>"><img class="<%=k%> w-100" src="/images/payment_methods/<%=k%>.jpg" /></a>
          </div>
        <% end %>
      </div>

    </div>

