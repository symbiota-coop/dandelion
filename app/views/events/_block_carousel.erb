<% image_source = event.image_source(@organisation) %>
<div style="position: relative;" class="m-1">
  <% if image_source %>
    <a target="_parent" href="/e/<%= event.slug %><%= "?cohost=#{@organisation.slug}" if image_source.is_a?(Cohostship) %>"
    <% if event.carousel_text %> data-toggle="tooltip" title="<%=event.carousel_text%>" <% end %>
    >
      <%= blurred_image_tag(image_source.image, width: image_source.image_width_unmagic, height: image_source.image_height_unmagic) %>
    </a>
  <% end %>
  <span data-toggle="tooltip" title="<%= when_details(event) %>" class="label label-primary" style="opacity: 0.85; border-radius: 0; position: absolute; top: 0; right: 0">
    <% if event.recording? %>
      Recording from
      <%= event.start_time.to_date.to_fs(:month_year) %> üçø
    <% else %>
      <% if event.start_time.to_date != event.end_time.to_date %>
        Starts
      <% end %>
      <%= event.start_time.to_date.to_fs(:no_year) %>
    <% end %>
  </span>
  <% if event.sold_out_cache %>
    <span class="label label-danger" style="opacity: 0.85; border-radius: 0; position: absolute; bottom: 0; right: 0">
      <% if event.sold_out_due_to_sales_end_cache %>
        Sales ended
      <% else %>
        Sold out
      <% end %>
    </span>
  <% end %>
</div>
